<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>SharpOpenJTalk</AssemblyName>
    <PackageId>SharpOpenJTalk</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <Sources Include="**/*.cs" />
  </ItemGroup>
  <ItemGroup>
    <!-- macOS -->
    <Content Include="..\resources\osx\x64-libopenjtalk.dylib" Condition="'$(RuntimeIdentifier)' == 'osx-x64'">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\resources\osx\arm64-libopenjtalk.dylib" Condition="'$(RuntimeIdentifier)' == 'osx-arm64'">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!-- Linux -->
    <Content Include="..\resources\linux\x64-libopenjtalk.so" Condition="'$(RuntimeIdentifier)' == 'linux-x64'">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\resources\linux\arm64-libopenjtalk.so" Condition="'$(RuntimeIdentifier)' == 'linux-arm64'">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!-- Windows -->
    <Content Include="..\resources\win-x64\openjtalk.dll" Condition="'$(RuntimeIdentifier)' == 'win-x64'">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\resources\win-x86\openjtalk.dll" Condition="'$(RuntimeIdentifier)' == 'win-x86'">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>